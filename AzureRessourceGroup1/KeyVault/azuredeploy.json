{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": { // Définition du schéma des paramètres pour azuredeploy.parameters.json
        "vaults_keyvaultprojet6_name": {
            "defaultValue": "keyvaultprojet6",
            "type": "String"
        },
        "adminPassword": {
            "type": "SecureString"
        }
    },
    "variables": {},
    "resources": [
        { // la KeyVault
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2024-04-01-preview",
            "name": "[parameters('vaults_keyvaultprojet6_name')]",
            "location": "eastus",
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "Standard"
                },
                "tenantId": "228228de-f39d-46a3-90f1-85e41d503cca",
                "accessPolicies": [],
                "enabledForDeployment": true,
                "enabledForDiskEncryption": false,
                "enabledForTemplateDeployment": true,
                "enableSoftDelete": true,
                "softDeleteRetentionInDays": 90,
                "enableRbacAuthorization": true,
                "vaultUri": "[concat('https://', parameters('vaults_keyvaultprojet6_name'), '.vault.azure.net/')]",
                "provisioningState": "Succeeded",
                "publicNetworkAccess": "Enabled"
            }
        },
        { // le secret pour la KeyVault qui va contenir le Mot de passe de vmadmin
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2024-04-01-preview",
            "name": "[concat(parameters('vaults_keyvaultprojet6_name'), '/AdminPass')]",
            "location": "eastus",
            "dependsOn": [ // le secret dépend forcément de sa vault
                "[resourceId('Microsoft.KeyVault/vaults', parameters('vaults_keyvaultprojet6_name'))]"
            ],
            "properties": {
                "contentType": "Administrator Password Use for VM",
                "attributes": {
                    "enabled": true
                },
            "value": "[parameters('adminPassword')]"
            }
        }
    ]
}